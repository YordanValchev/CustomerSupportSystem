@model ContactDetailsModel

<div class="row g-3">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.PartnerId" />
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" readonly>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" readonly>
    </div>
    <div class="col-12">
        <label asp-for="JobTitle" class="form-label"></label>
        <input asp-for="JobTitle" class="form-control" readonly>
    </div>
    <div class="col-12">
        <label asp-for="EmailAddress" class="form-label"></label>
        <input asp-for="EmailAddress" class="form-control" readonly>
    </div>
    <div class="col-12">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly>
    </div>
</div>
<hr class="my-4" />
<div class="row row-cols-1">
    <div class="col">
        <input asp-for="@Model.IsUser" class="form-check-input" type="checkbox" disabled>
        <label asp-for="@Model.IsUser" class="form-check-label"></label>
        <input type="hidden" asp-for="@Model.UserId" />
    </div>
</div>

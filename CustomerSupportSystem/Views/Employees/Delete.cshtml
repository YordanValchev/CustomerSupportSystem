@model EmployeeDetailsModel

@{
    ViewData["Title"] = "Delete employee";
    ViewData["ActivePage"] = NavPagesService.Employees;
}

<h2 class="text-center mb-3">@ViewBag.Title</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_EmployeeDetailsPartial" model="@Model" />
            <hr class="my-4" />
            <div class="row row-cols-1">
                <div class="col">
                    <input asp-for="ConfirmDelete" class="form-check-input" type="checkbox" value="true" checked="@Model.ConfirmDelete">
                    <label asp-for="ConfirmDelete" class="form-check-label"></label>
                    <span asp-validation-for="ConfirmDelete" class="small text-danger"></span>
                </div>
            </div>
            <hr class="my-4" />
            <div class="text-center">
                <input class="w-100 btn btn-primary btn-lg" type="submit" value="Delete" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

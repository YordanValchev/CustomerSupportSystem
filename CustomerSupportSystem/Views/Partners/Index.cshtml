@model PartnersQueryModel

@{
    ViewData["Title"] = "Partners";
    ViewData["ActivePage"] = NavPagesService.AllPartners;
}

<div class="row">
    <ul class="nav nav-pills mb-auto justify-content-end">
        <li class="nav-item">
            <a class="nav-link active" id="AddPartner" asp-area="" asp-controller="Partners" asp-action="Add">
                Add partner
            </a>
        </li>
    </ul>
</div>
<br />
<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.IdSort">
                        @Html.DisplayNameFor(model => model.Partners.First().Id)
                        <i class="bi @Model.IdSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.NameSort">
                        @Html.DisplayNameFor(model => model.Partners.First().Name)
                        <i class="bi @Model.NameSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.AddressSort">
                        @Html.DisplayNameFor(model => model.Partners.First().Address)
                        <i class="bi @Model.AddressSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.CitySort">
                        @Html.DisplayNameFor(model => model.Partners.First().City)
                        <i class="bi @Model.CitySortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.CountrySort">
                        @Html.DisplayNameFor(model => model.Partners.First().Country)
                        <i class="bi @Model.CountrySortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.PostcodeSort">
                        @Html.DisplayNameFor(model => model.Partners.First().Postcode)
                        <i class="bi @Model.PostcodeSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.RegistrationNumberSort">
                        @Html.DisplayNameFor(model => model.Partners.First().RegistrationNumber)
                        <i class="bi @Model.RegistrationNumberSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.TaxNumberSort">
                        @Html.DisplayNameFor(model => model.Partners.First().TaxNumber)
                        <i class="bi @Model.TaxNumberSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.WebsiteSort">
                        @Html.DisplayNameFor(model => model.Partners.First().Website)
                        <i class="bi @Model.WebsiteSortImageClass"></i>
                    </a>
                </th>
                <th scope="col">
                    <a class="text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Index"
                        asp-route-sortOrder="@Model.ConsultantSort">
                        @Html.DisplayNameFor(model => model.Partners.First().Consultant)
                        <i class="bi @Model.ConsultantSortImageClass"></i>
                    </a>
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var partner in Model.Partners)
            {
                <tr>
                    <th scope="row">
                        <a class="link-dark link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Id
                        </a>
                    </th>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Name
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Address
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.City
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Country
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Postcode
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.RegistrationNumber
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.TaxNumber
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Website
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id">
                            @partner.Consultant
                        </a>
                    </td>
                    <td>
                        <a class="link-dark text-decoration-none" asp-area="" asp-controller="Partners" asp-action="Details" asp-route-id="@partner.Id" title="Details">
                            <i class="bi bi-card-text"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
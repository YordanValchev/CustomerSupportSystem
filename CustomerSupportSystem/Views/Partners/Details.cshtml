@model PartnerDetailsModel

@{
    ViewData["Title"] = "Partner details";
    ViewData["ActivePage"] = NavPagesService.Partners;
}

<h2 class="text-center mb-3">@ViewBag.Title</h2>
<hr class="my-4" />
<div class="row">
    <div class="col-md-8">
        <form>
            <div class="row g-3">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="col-12">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" readonly>
                </div>
                <div class="col-12">
                    <label asp-for="@Model.Address" class="form-label"></label>
                    <input asp-for="@Model.Address" class="form-control" readonly>
                </div>
                <div class="col-md-5">
                    <label asp-for="@Model.Country" class="form-label"></label>
                    <input asp-for="@Model.Country" class="form-control" readonly>
                </div>
                <div class="col-md-5">
                    <label asp-for="@Model.City" class="form-label"></label>
                    <input asp-for="@Model.City" class="form-control" readonly>
                </div>
                <div class="col-md-2">
                    <label asp-for="@Model.Postcode" class="form-label"></label>
                    <input asp-for="@Model.Postcode" class="form-control" readonly>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.RegistrationNumber" class="form-label"></label>
                    <input asp-for="@Model.RegistrationNumber" class="form-control" readonly>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.TaxNumber" class="form-label"></label>
                    <input asp-for="@Model.TaxNumber" class="form-control" readonly>
                </div>
                <div class="col-12">
                    <label asp-for="@Model.Website" class="form-label"></label>
                    <input asp-for="@Model.Website" class="form-control" readonly>
                </div>
                <div class="col-12">
                    <label asp-for="@Model.Consultant" class="form-label"></label>
                    <input asp-for="@Model.Consultant" class="form-control" readonly>
                </div>
            </div>
            <hr class="my-4" />
            <div class="row row-cols-1">
                <div class="col">
                    <label asp-for="@Model.SubscriptionContractNumber" class="form-label"></label>
                    <input asp-for="@Model.SubscriptionContractNumber" class="form-control" readonly>
                    <span asp-validation-for="SubscriptionContractNumber" class="small text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="@Model.IsSubscriptionActive" class="form-check-input" type="checkbox" disabled>
                    <label asp-for="@Model.IsSubscriptionActive" class="form-check-label"></label>
                </div>
            </div>
        </form>
        <hr class="my-4" />
        <div class="text-center">
            <a class="btn btn-primary" role="button" id="EditPartner" asp-area="" asp-controller="Partners" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="bi bi-pencil-square"></i>
                Edit partner
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <h4 class="text-center mb-3">Contacts</h4>
        <ul class="list-group mb-3">
            @foreach(var contact in Model.Contacts)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-10">
                            <h6 class="my-0">@contact.Name</h6>
                            <small class="text-muted">@contact.JobTitle</small>
                            <br />
                            <small class="text-muted"><i class="bi bi-envelope"></i> @contact.EmailAddress</small>
                            <br />
                            <small class="text-muted"><i class="bi bi-telephone"></i> @contact.PhoneNumber</small>
                        </div>
                        <div class="col-md-2 align-self-center">
                            <a class="btn btn-primary btn-sm" role="button" id="AddContact" title="Edit contact"
                                asp-area="" asp-controller="Contacts" asp-action="Edit"
                                asp-route-id="@contact.Id" asp-route-partnerId="@Model.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <div class="text-center">
            <a class="btn btn-primary" role="button" id="AddContact" asp-area="" asp-controller="Contacts" asp-action="Add" asp-route-partnerId="@Model.Id">
                <i class="bi bi-person-add"></i>
                Add contact
            </a>
        </div>
    </div>
</div>

